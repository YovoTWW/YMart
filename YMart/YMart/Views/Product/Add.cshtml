@using YMart.ViewModels.Product;
@model AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    @if (User.IsInRole("Administrator"))
    {
        <h2>@ViewData["Title"]</h2>
    }
    @if (!User.IsInRole("Administrator"))
    {
        <h2>Can only be viewed by Administrators</h2>
    }
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        @if (User.IsInRole("Administrator"))
        {
            <form asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-sm-6 mb-2">
                        <label asp-for="@Model.Name" class="form-label-add-edit">Product Name</label>
                        <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 mb-2">
                        <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input asp-for="Price" class="form-control" aria-required="true" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 mb-2">
                        <label asp-for="@Model.DiscountPercentage" class="form-label-add-edit">Discount Percentage</label>
                        <div class="input-group">
                            <span class="input-group-text">%</span>
                            <input asp-for="DiscountPercentage" class="form-control" aria-required="true" type="number" step="1" min="0" />
                        </div>
                        <span asp-validation-for="@Model.DiscountPercentage" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 mb-2">
                        <label asp-for="IsOnSale" class="form-label-add-edit">Product Is on Sale</label>
                        <select asp-for="IsOnSale" class="form-select" aria-required="true">
                            <option value="">Choose if a Product is on sale</option>
                            <option value="True" Model.IsOnSale="True">True</option>
                            <option value="False" Model.IsOnSale="False">False</option>
                        </select>
                        <span asp-validation-for="IsOnSale" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-2">
                    <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="2"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="@Model.ImageURL" class="form-label-add-edit">ImageURL</label>
                    <input asp-for="@Model.ImageURL" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                    <span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-2">
                        <label asp-for="Category" class="form-label-add-edit">Category</label>
                        <select asp-for="Category" class="form-select" aria-required="true">
                            <option value="">Select a Category for the Product</option>
                            @foreach (var Category in Model.CategoriesList)
                            {
                                <option value="@Category" Model.Category=Category>@Category</option>
                            }
                        </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Quantity" class="form-label-add-edit">Quantity</label>
                    <div class="input-group">
                        <input asp-for="Quantity" class="form-control" aria-required="true" type="number" step="1" min="0" />
                    </div>
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
        }
    </div>
</div> 