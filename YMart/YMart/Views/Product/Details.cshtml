@using YMart.ViewModels.Product;
@model DetailedProductViewModel

@{
    ViewData["Title"] = "Product Details";    
        string ControllerName = "Home";
        string ActionName = "NotSignedIn";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="Top">
    <h2 id="Title">@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.Name" />
        }
        else
        {
            <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
        }
    </div>

    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <hr />
            <h6 class="card-subtitle mb-2 text-muted">@Model.Price.ToString("C")</h6>
            <hr />
            <p class="card-text">@Model.Description</p>
            <hr />
            <p class="card-text"><small class="text-muted">Category: @Model.Category</small></p>
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Product" asp-action="Index" class="User-Buttons" id="yellow"><i class="bi bi-arrow-bar-left"></i>Back</a>
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    ControllerName = "Product";
                    ActionName = "AddToCart";
                }
                <form asp-controller="@ControllerName" asp-action="@ActionName" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="User-Buttons" id="green"><i class="bi bi-cart"></i>Add to Cart</button>
                    </form>
             </div>
        </div>
                <br />
                @if (User.IsInRole("Administrator"))
                {
                    <div>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                    <a asp-controller="Product" asp-action="SoftDelete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to soft delete this product?');"><i class="bi bi-trash"></i>Soft Delete</a>
                    <a asp-controller="Product" asp-action="HardDelete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to hard delete this product?');"><i class="bi bi-trash"></i>Hard Delete</a>
                    </div>
                }     
    </div>
</div>
