@using YMart.ViewModels.Product;

@model IEnumerable<BasicProductViewModel>

@{
    ViewData["Title"] = "Products List";
}

<style>
    .Top-Text{
        margin:20px;
    }

    .User-Buttons{
        flex: 1 1 auto;
        margin-left:0.25rem;
        margin-right:0.25rem;
        display:flex;
        align-items:center;
        justify-content:center;
        padding-top:10px;
        padding-bottom:10px;
        text-decoration:none;
        border-radius:0.25rem;
    }


    #cyan{
        color:black;
        background-color: #0dcaf0;
        border-color: #0dcaf0;
    }

    #green{
        color: white;
        background-color: #198754;
        border-color: #198754;
        
       
    }

    .Buttons-Div{
        display:flex;
        align-items:center;
        justify-content:space-between;
        text-align:center;
    }

</style>

<div class="Top-Text">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="Product-Row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(product.ImageURL))
                {
                    <img src="@product.ImageURL" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@product.Name">
                }
                else
                {
                    <img src="~/img/no-image-available-02.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: @product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("fr-FR"))</p>
                    <div class="Buttons-Div">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="User-Buttons" id="cyan">Details</a>
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <form asp-controller="Product" asp-action="AddToCart" method="post">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="User-Buttons" id="green" ><i class="bi bi-cart"></i>Add to Cart</button>
                            </form>
                        }
                        else
                        {                        
                            <a asp-controller="Home" asp-action="NotSignedIn" class="User-Buttons" id="green"><i class="bi bi-cart"></i>Add to Cart</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
