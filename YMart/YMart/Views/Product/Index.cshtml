@using YMart.ViewModels.Product;
@using static YMart.Constants.CategoryList;

@model IEnumerable<BasicProductViewModel>

@{
    string categoryFilter = ViewData["CategoryFilter"] as string ?? "All";
    ViewData["Title"] = "Products List";
    
}


<link rel="stylesheet" href ="~/css/style.css" />

<style>
    .Product-Row{
        display:flex;
        text-align:center;
        flex-wrap:wrap;
        gap:2.1rem;
    }

    .Product-Box {
        flex-grow:1;
        margin-bottom: 1.5rem;
        width: 23%;
        min-width:23%;
        max-width:23%;
        text-align:center;
        position:relative;
    }

    .card{
        width:100%;
        height:100%;
        text-align:center;
    }

    .card-img-top{
        height:150px;
        max-height:150px;
        object-fit:contain;
        padding-top:10px;
        padding-left:5px;
        padding-right:5px;
    }

    .card-body{
        display:flex;
        flex-direction:column;
    }

    .card-title{
        height:48px;
        max-height:48px;
    }

    .Info-Container{
        display:flex;
        flex-direction:row;
    }

    .Categories{
        display: flex;
        flex-direction: row;
        gap:1rem;
        align-items: center;
        justify-content: center;
    }

    .Categories>button{
        height:0;
       padding:1rem;
    }

    .card-text{
        margin-bottom:0px;
    }

    #dp-text{
         color:red;
         margin-bottom:0.5rem;
    }

    .discount-badge {
        position: absolute;
        top: 5px;
        right: 5px;
        background-color: red;
        color: white;
        padding: 4px 8px;
        font-size: 0.9rem;
        font-weight: bold;
        border-radius: 8px;
        z-index: 1;
    }
    
</style>

<div class="Info-Container">
<div class="Top-Text">
    <h2>@ViewData["Title"]</h2>
</div>
<form method="get" class="Categories">
        <button type="submit" class="User-Buttons" name="categoryFilter" value="All" >All</button>
        @foreach(var category in Categories)
        {
           <button type="submit" class="User-Buttons" name="categoryFilter" value="@category">@category</button>
        }
</form>
</div>
<hr />


        <div class="Product-Row">
            @foreach (var product in Model)
            {
                <div class="Product-Box">
            @if (product.DiscountedPrice < product.Price)
            {               
                <div class="discount-badge">-@product.DiscountPercentage%</div>
            }
                    <div class="card">
                        @if (!string.IsNullOrEmpty(product.ImageURL))
                        {
                            <img src="@product.ImageURL" class="card-img-top" alt="@product.Name">
                        }
                        else
                        {
                            <img src="~/img/no-image-available-02.jpg" class="card-img-top" alt="No Image Available">
                        }

                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                    <p class="card-text"
                       style="@(product.DiscountedPrice != product.Price ? "text-decoration: line-through; color: gray;" : "")">
                        Price: @product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("fr-FR"))
                    </p>
                    <p class="discount-text" id="dp-text"
                       style="@(product.DiscountedPrice == product.Price ? "visibility:hidden;" : "")">
                       Discounted Price: @product.DiscountedPrice.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("fr-FR"))
                    </p>
                    <div class="Buttons-Div">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="User-Buttons" id="cyan">Details</a>
                                @if (User?.Identity?.IsAuthenticated == true)
                                {
                                    <form asp-controller="Product" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button type="submit" class="User-Buttons" id="green" ><i class="bi bi-cart"></i>Add to Cart</button>
                                    </form>
                                }
                                else
                                {                        
                                    <a asp-controller="Home" asp-action="NotSignedIn" class="User-Buttons" id="green-a"><i class="bi bi-cart"></i>Add to Cart</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

@if (TempData["ShowPopup"] != null && (bool)TempData["ShowPopup"])
{
    <script>
        alert("Item already in cart.");
    </script>
}