@using YMart.ViewModels.Brochure;
@model BasicBrochureViewModel

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    @if (User.IsInRole("Administrator"))
    {
        <h2>@ViewData["Title"]</h2>
    }
    @if (!User.IsInRole("Administrator"))
    {
        <h2>Can only be viewed by Administrators</h2>
    }
</div>
<hr />

@if (User.IsInRole("Administrator"))
{
<link rel="stylesheet" href="~/css/style.css" />
<style>
    .card-footer {
        border-bottom: 1px solid rgba(0,0,0,.125);
        border-radius: 0.25rem;
    }

    .row {
        display: flex;
        gap: 3rem;
    }

    #dp-text {
        color: red;
        margin-bottom: 0.5rem;
    }

    body {
        background-image: url('/images/stylized_white_2.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<div class="row justify-content-center" style="margin: 0 auto; margin-top:50px;">
    <div class="col-md-4 text-center" style="width:800px; height:230px;">
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" class="img-fluid" style="width: 770px; height:200px; object-fit:contain;" />
        }
        else
        {
            <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-width: 100%; height: 100%;" alt="No Image Available" />
        }
    </div>

    <div class="col-md-8" style="max-width:650px;">
        <div class="card-body">
            <h4>Products in Brochure</h4>
            @foreach(var productName in @Model.ProductNames)
            {
            <h5 class="card-title">@productName</h5>
            <hr />
            }
            <h6 class="card-subtitle">Is Active: @Model.IsActive</h6>
            <hr />
        </div>
        <br />
        @if (User.IsInRole("Administrator"))
        {
            <div>
                <a asp-controller="Brochure" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                <a asp-controller="Brochure" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this brochure forever?');"><i class="bi bi-trash"></i>Delete</a>
            </div>
        }
    </div>
</div>
}

