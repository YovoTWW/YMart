@using YMart.ViewModels.Brochure;
@model EditBrochureViewModel
@{
    ViewData["Title"] = "Edit Brochure";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    @if (User.IsInRole("Administrator"))
    {
        <h2>@ViewData["Title"]</h2>
    }
    @if (!User.IsInRole("Administrator"))
    {
        <h2>Can only be viewed by Administrators</h2>
    }
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        @if (User.IsInRole("Administrator"))
        {
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="mb-2">
                    <label asp-for="@Model.ImageURL" class="form-label-add-edit">ImageURL</label>
                    <input asp-for="@Model.ImageURL" class="form-control" aria-required="false" placeholder="Enter image URL" />
                    <span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-2">
                        <div class="col-sm-6 mb-2">
                            <label asp-for="IsActive" class="form-label-add-edit">Brochure is active status</label>
                            <select asp-for="IsActive" class="form-select" aria-required="true">
                                <option value="">Choose if a brochure is active or not</option>
                                <option value="True" Model.IsActive="True">True</option>
                                <option value="False" Model.IsActive="False">False</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                        <label class="form-label-add-edit">Products</label>
                        <div>
                            @foreach (var productName in @Model.AllProducts)
                            {
                                <div class="form-check">
                                    @if (@Model.ProductNames.Contains(productName))
                                    {
                                        <input class="form-check-input" type="checkbox" name="ProductNames" value="@productName" id="@productName" checked/>
                                    }
                                    else
                                    {
                                        <input class="form-check-input" type="checkbox" name="ProductNames" value="@productName" id="@productName"/>
                                    }
                                    <label class="form-check-label" for="@productName">@productName</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-2">
                    <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
                </div>
            </form>
        }
    </div>
</div>