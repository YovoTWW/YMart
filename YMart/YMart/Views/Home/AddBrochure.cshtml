@using YMart.ViewModels.Brochure;
@model AddBrochureViewModel
@{
    ViewData["Title"] = "Add Brochure";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    @if (User.IsInRole("Administrator"))
    {
        <h2>@ViewData["Title"]</h2>
    }
    @if (!User.IsInRole("Administrator"))
    {
        <h2>Can only be viewed by Administrators</h2>
    }
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        @if (User.IsInRole("Administrator"))
        {
            <form asp-action="AddBrochure" method="post" enctype="multipart/form-data">
                <div class="mb-2">
                    <label asp-for="@Model.ImageURL" class="form-label-add-edit">ImageURL</label>
                    <input asp-for="@Model.ImageURL" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                    <span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-2">
                        <label asp-for="Products" class="form-label-add-edit">Category</label>
                        <select asp-for="Products" class="form-select" aria-required="true">
                            <option value="">Select a Category for the Product</option>
                            @foreach (var Category in Model.CategoriesList)
                            {
                                <option value="@Category" Model.Category=Category>@Category</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 mb-2">
                        <label asp-for="@Model.Quantity" class="form-label-add-edit">Quantity</label>
                        <div class="input-group">
                            <input asp-for="Quantity" class="form-control" aria-required="true" type="number" step="1" min="0" />
                        </div>
                        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-2">
                    <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
                </div>
            </form>
        }
    </div>
</div>
