@using YMart.ViewModels.Brochure;
@model DeleteBrochureViewModel

@{
    ViewData["Title"] = " Delete Brochure";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    @if (User.IsInRole("Administrator"))
    {
        <h2>@ViewData["Title"]</h2>
    }
    @if (!User.IsInRole("Administrator"))
    {
        <h2>Can only be viewed by Administrators</h2>
    }
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        @if (User.IsInRole("Administrator"))
        {
            <div class="card">
                <div class="card-body">                  
                    <p class="text-danger mt-3">Are you sure you want to delete this brochure?</p>
                </div>
                <div class="card-footer">
                    <form asp-controller="Home" asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <button type="button" onclick="history.back()" class="User-Buttons" id="yellow"><i class="bi bi-arrow-bar-left"></i>Back</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
